@model Application.ViewModels.Order.OrderViewModel;


<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-sm-3">
            <div class="card">
                <div class="card-header bg-dark text-light fw-bold">
                    <div class="text-center">Editando la orden</div>
                </div>
                <div class="card-body">
                    <form asp-controller="Order" asp-action="Edit">
                        <div class="mb-3">
                            <label asp-for="ClientId" class="form-label">Seleccione al empleado</label>
                            <select class="form-select" asp-items="@(new SelectList(Model.Clients,"Id","ClientName"))" asp-for="ClientId">
                                <option value="0" disabled>Seleccione una opción</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label">Seleccione el producto</label>
                            <select class="form-select" asp-items="@(new SelectList(Model.Products,"Id","ProductName"))" asp-for="ProductId">
                                <option value="0" disabled>Seleccione una opción</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amout" class="form-label">Cantidad</label>
                            <input asp-for="Amout" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeliveryDate" class="form-label">Fecha de entrega</label>
                            <input asp-for="DeliveryDate" class="form-control" />
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <input type="submit" value="Editar" class="btn btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>